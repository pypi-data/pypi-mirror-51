import sys
import platform

if __name__ == '__main__':
    
    if sys.version_info[0] == 3:
        try:
            import wx
        
        except ImportError:
            sys.stderr.write("videomass: ERROR: 'wx' module is required.\n"
                             "Videomass for Python3 need wxPython-Phoenix.\n"
                             "Visit the wxPython web page for more info:\n"
                             u"<https://wxpython.org/>\n"
                            )
            sys.exit(1)
        
        from videomass3 import Videomass3
        Videomass3.main()
        
    elif sys.version_info[0] == 2:

        try:
            import wx
        
        except ImportError:
            sys.stderr.write("videomass: ERROR: 'wx' module is required.\n"
                            "Videomass for Python2 need wxPython-Classic.\n"
                             )
            
            if platform.system() in ['Windows', 'Darwin']:
                sys.stderr.write("You could find it here:\n"
                u"<https://sourceforge.net/projects/wxpython/files/wxPython/>\n"
                                )
            else:
                sys.stderr.write('Please, install wxPython with your package '
                                'manager.\n')
            sys.exit(1)
        
        from videomass2 import Videomass2
        Videomass2.main()
    
    else:
        sys.stderr.write(
                    "videomass: ERROR: Not a supported Python version. "
                    "Need Python2 or Python3\n"
                    "You are using Python version %s\n" % sys.version
                         )
        sys.exit(1)
