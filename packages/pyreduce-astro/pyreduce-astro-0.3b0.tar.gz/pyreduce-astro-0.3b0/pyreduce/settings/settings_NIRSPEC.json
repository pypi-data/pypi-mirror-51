{
    "__instrument__": "NIRSPEC",
    "__skip_existing__": false,
    "instrument": {
        "calibration_dir": "../cal"
    },
    "bias": {
        "plot": false
    },
    "flat": {
        "plot": false
    },
    "orders": {
        "degree": 4,
        "filter_size": 50,
        "min_cluster": 2000,
        "border_width": 0,
        "noise": 40,
        "merge_min_threshold": 0.2,
        "manual": true,
        "plot": false
    },
    "norm_flat": {
        "smooth_slitfunction": 2,
        "smooth_spectrum": 0,
        "extraction_width": 35,
        "oversampling": 12,
        "swath_width": 300,
        "threshold": 1000,
        "plot": false
    },
    "wavecal": {
        "extraction_width": 0.25,
        "threshold": 100,
        "dimensionality": "2D",
        "degree": [2, 6],
        "manual": false,
        "plot": false
    },
    "freq_comb": {
        "extraction_width": 0.25,
        "dimensionality": "2D",
        "degree": [6, 6],
        "plot": false
    },
    "curvature": {
        "extraction_width": 0.25,
        "dimensionality": "1D",
        "degree": 2,
        "plot": false
    },
    "science": {
        "oversampling": 10,
        "extraction_width": [35, 35],
        "swath_width": 300,
        "smooth_slitfunction": 0.3,
        "smooth_spectrum": 0,
        "tilt": 0.05,
        "plot": false
    },
    "continuum": {
        "plot": true
    },
    "finalize" : {"filename": "{input}.ech","plot": false}
}