<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="related_project_id" position="after">
                <field name="is_from_lengow" invisible="1"/>
            </field>
            <group name="sale_total" position="after">
                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total_lengow"  attrs="{'invisible': [('is_from_lengow', '=', False)]}">
                    <field label="Lengow total taxes" name="lengow_total_amount_tax" string="Lengow Total Taxes" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="lengow_total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </group>
        </field>
    </record>
</odoo>

