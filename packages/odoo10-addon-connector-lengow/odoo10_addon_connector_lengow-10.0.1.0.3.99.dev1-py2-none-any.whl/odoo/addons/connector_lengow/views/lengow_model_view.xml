<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_lengow_backend_form" model="ir.ui.view">
        <field name="name">view.lengow.backend.form</field>
        <field name="model">lengow.backend</field>
        <field name="arch" type="xml">
            <form string="Lengow Backend">
                <header>
                    <button name="synchronize_metadata" type="object"
                    string="Synchronize Metadata" class="oe_highlight" groups="connector_lengow.group_lengow_manager"
                    attrs="{'invisible': [('version', '!=', '3.0')]}"/>
                </header>
                <sheet>
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_stat_button oe_right"
                                name="%(action_lengow_product_product_no_group_by)d" type="action"
                                icon="fa-file-text-o"
                                context="{'search_default_backend_id': active_id}">
                            <div><strong><field nolabel="1" name="binded_products_count" widget="statinfo"/></strong>Products</div>
                        </button>
                    </div>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group name="lengow" string="Lengow Configuration">
                        <notebook>
                            <page string="API" name="api">
                                <group colspan="4" col="4">
                                    <field name="version" colspan="4"/>
                                    <field name="location" placeholder="e.g. http://my.lengow.com"
                                        colspan="2" widget="url"/>
                                     <field name="wsdl_location" placeholder="e.g. http://my.lengow.com"
                                        colspan="2" widget="url"/>
                                    <field name="access_token" colspan="2"/>
                                    <field name="secret" password="1" colspan="2"/>
                                    <field name="id_client" colspan="2"/>
                                </group>
                            </page>
                            <page string="Catalogues" name="catalogue">
                                <group>
                                    <field nolabel="1" name="catalogue_ids" readonly="1"/>
                                </group>
                            </page>
                            <page string="Sale" name="Sale">
                                <group>
                                    <field name="account_analytic_id" groups="sale.group_analytic_accounting" />
                                    <field name="warehouse_id"/>
                                    <field name="fiscal_position_id"/>
                                    <field nolabel="1"
                                           name="tax_mapping_ids" colspan="2">
                                        <tree editable="top">
                                            <field name="country_id"/>
                                            <field name="fiscal_position_id"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name='imports' String='Imports'>
                                <group col="4">
                                     <field name='import_orders_from_date' colspan="2"/>
                                     <button name="import_sale_orders" type="object" string="Import Sale Orders"  class="oe_highlight" colspan="2"/>
                                </group>
                            </page>
                            <page name="currency" String="Multi-Currency">
                                <group>
                                    <field nolabel="1" name="currency_mapping_ids">
                                        <tree editable="top">
                                            <field name="currency_id"/>
                                            <field name="pricelist_id"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lengow_backend_tree" model="ir.ui.view">
        <field name="name">lengow.backend.tree</field>
        <field name="model">lengow.backend</field>
        <field name="arch" type="xml">
            <tree string="Lengow Backend">
                <field name="name"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <record id="action_lengow_backend" model="ir.actions.act_window">
        <field name="name">Lengow Backends</field>
        <field name="res_model">lengow.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_lengow_backend_tree"/>
    </record>

    <record id="view_lengow_catalogue_form" model="ir.ui.view">
        <field name="name">view.lengow.catalogue.form</field>
        <field name="model">lengow.catalogue</field>
        <field name="arch" type="xml">
            <form string="Lengow Catalogue">
                <header>
                    <button name="%(action_lengow_product_binding_wizard)d" type="action" string="Bind Products" class="oe_highlight" groups="connector_lengow.group_lengow_manager"/>
                </header>
                <sheet>
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_stat_button oe_right"
                                name="%(action_lengow_product_product_no_group_by)d" type="action"
                                icon="fa-file-text-o"
                                context="{'search_default_catalogue_id': active_id}">
                            <div><strong><field nolabel="1" name="binded_products_count" widget="statinfo"/></strong>Products</div>
                        </button>
                    </div>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group name='backend'>
                        <field name="id" invisible="1"/>
                        <field name="backend_id"/>
                    </group>
                    <group name="catalogue" string="Catalogue Configuration">
                        <group name="file" string="File" colspan="4" col="4">
                            <field name="product_filename" colspan="4"/>
                            <field name="product_ftp" colspan="4"/>
                            <field name="product_ftp_host" colspan="2" attrs="{'invisible': [('product_ftp', '=', False)],
                                                                               'required': [('product_ftp', '=', True)]}"/>
                            <field name="product_ftp_port" colspan="2" attrs="{'invisible': [('product_ftp', '=', False)],
                                                                               'required': [('product_ftp', '=', True)]}"/>
                            <field name="product_ftp_user" colspan="2" attrs="{'invisible': [('product_ftp', '=', False)],
                                                                               'required': [('product_ftp', '=', True)]}"/>
                            <field name="product_ftp_password" password="1" colspan="2" attrs="{'invisible': [('product_ftp', '=', False)],
                                                                                                'required': [('product_ftp', '=', True)]}"/>
                            <field name="product_ftp_directory" colspan="2" attrs="{'invisible': [('product_ftp', '=', False)],
                                                                                    'required': [('product_ftp', '=', True)]}"/>
                        </group>
                        <group name="products" string="Product Parameters">
                            <field name="default_lang_id" widget="selection"/>
                                 <field name="warehouse_id"/>
                                 <field name="product_stock_field_id" widget="selection"
                                        domain="[('model', 'in', ['product.product', 'product.template']), ('ttype', '=', 'float')]"/>
                                 <field name="product_pricelist_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name='exports' String='Exports'>
                            <group col="4">
                                 <field name='last_export_date' readonly="1" colspan="2"/>
                                 <button name="export_binded_products" type="object" string="Export Products"  class="oe_highlight" colspan="2"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lengow_catalogue_tree" model="ir.ui.view">
        <field name="name">lengow.catalogue.tree</field>
        <field name="model">lengow.catalogue</field>
        <field name="arch" type="xml">
            <tree string="Lengow Catalogue">
                <field name="name"/>
                <field name="backend_id"/>
                <field name="binded_products_count"/>
                <field name="product_filename"/>
                <field name="product_ftp"/>
            </tree>
        </field>
    </record>

    <record id="action_lengow_catalogue" model="ir.actions.act_window">
        <field name="name">Lengow Catalogues</field>
        <field name="res_model">lengow.catalogue</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_lengow_catalogue_tree"/>
    </record>

     <record id="view_lengow_marketplace_form" model="ir.ui.view">
        <field name="name">lengow.market.place.form</field>
        <field name="model">lengow.market.place</field>
        <field name="arch" type="xml">
            <form string="Lengow MarketPlace">
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="MarketPlace"/>
                        <h1><field name="name" class="oe_inline" attrs="{'readonly': ['|', ('backend_version', '=', '3.0'), ('backend_version', '=', False)]}"/></h1>
                    </div>
                    <group string="Informations">
                        <field name="backend_id" attrs="{'readonly': [('backend_version', '=', '3.0')]}" required='True'/>
                        <field name="lengow_id" string='Code' attrs="{'invisible': [('backend_version', '=', '3.0'), ('backend_version', '=', False)]}"/>
                        <field name="backend_version" invisible='1'/>
                        <field name="homepage" widget='url' attrs="{'readonly': ['|', ('backend_version', '=', '3.0'), ('backend_version', '=', False)]}"/>
                        <field name="description" attrs="{'readonly': ['|', ('backend_version', '=', '3.0'), ('backend_version', '=', False)]}"/>
                        <field name="payment_mode_id" readonly="1"/>
                    </group>
                    <group string="Options" name="options">
                        <field name="account_analytic_id" groups="sale.group_analytic_accounting" class="oe_read_only"/>
                        <field name="specific_account_analytic_id" groups="sale.group_analytic_accounting" class="oe_edit_only" />
                        <field name="fiscal_position_id" class="oe_read_only"/>
                        <field name="specific_fiscal_position_id" class="oe_edit_only" />
                        <field name="warehouse_id" class="oe_read_only"/>
                        <field name="specific_warehouse_id" class="oe_edit_only"/>
                        <field name="route_id"/>
                    </group>
                    <notebook>
                        <page name="import" string="Imports">
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lengow_marketplace_tree" model="ir.ui.view">
        <field name="name">lengow.market.place.tree</field>
        <field name="model">lengow.market.place</field>
        <field name="arch" type="xml">
            <tree string="Lengow MarketPlace">
                <field name="name"/>
                <field name="homepage"/>
            </tree>
        </field>
    </record>

    <record id="action_lengow_marketplace" model="ir.actions.act_window">
        <field name="name">Lengow MarketPlaces</field>
        <field name="res_model">lengow.market.place</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_lengow_marketplace_tree"/>
    </record>
</odoo>

