<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_lengow_product_unbinding_wizard_form" model="ir.ui.view">
        <field name="name">view.lengow.product.unbinding.wizard.form</field>
        <field name="model">lengow.product.unbinding.wizard</field>
        <field name="arch" type="xml">
            <form string="Lengow Product Unbinding">
                <field name='lengow_product_ids'/>
                <footer>
                    <button string="UnBind Products" name="unbind_products"
                            type="object" class="oe_highlight"
                            confirm="Do you really want to unbind these products ?"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lengow_product_unbinding_wizard" model="ir.actions.act_window">
        <field name="name">Lengow Product Unbinding</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lengow.product.unbinding.wizard</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_lengow_product_unbinding_wizard_form"/>
        <field name="groups_id" eval="[(4, ref('group_lengow_manager'))]"/>
    </record>

    <record id="ir_lengow_product_unbinding_wizard" model="ir.values">
        <field eval="'client_action_multi'" name="key2"/>
        <field eval="'lengow.product.product'" name="model"/>
        <field name="name">UnBind Product</field>
        <field eval="'ir.actions.act_window,'+str(action_lengow_product_unbinding_wizard)" name="value"/>
    </record>

</odoo>

