<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lengow_product_binding_wizard_form" model="ir.ui.view">
        <field name="name">view.lengow.product.binding.wizard.form</field>
        <field name="model">lengow.product.binding.wizard</field>
        <field name="arch" type="xml">
            <form string="Lengow Product Binding">
                <field name='catalogue_id'/>
                <field name='product_ids'/>
                <footer>
                    <button string="Bind Products" name="bind_products"
                            type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lengow_product_binding_wizard" model="ir.actions.act_window">
        <field name="name">Lengow Product Binding</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lengow.product.binding.wizard</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_lengow_product_binding_wizard_form"/>
        <field name="groups_id" eval="[(4, ref('group_lengow_manager'))]"/>
    </record>

</odoo>

